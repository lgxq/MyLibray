<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:minWidth="80dp"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_centerInParent="true"
            android:contentDescription="@string/library_dialog_name"
            android:src="@drawable/library_progress_logo"/>

        <ImageView
            android:id="@+id/library_progress_rotate_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/library_dialog_name"
            android:src="@drawable/library_progress_round"/>
    </RelativeLayout>

    <TextView
        android:id="@+id/library_progress_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center_horizontal"
        android:textSize="13dp"
        android:textColor="#ffffff"
        android:text="提示信息"/>
</LinearLayout>