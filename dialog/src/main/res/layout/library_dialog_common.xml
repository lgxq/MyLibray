<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:minHeight="160dp"
    android:minWidth="280dp"
    android:background="#ffffff">

    <TextView
        android:id="@+id/library_common_dialog_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textSize="15dp"
        android:textColor="#333333"
        android:text="标题标题"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <TextView
            android:id="@+id/library_common_dialog_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="70dp"
            android:gravity="center_vertical"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:textSize="15dp"
            android:textColor="#666666"
            android:text="内容内容内容内容内容内容内容内容内容" />
    </ScrollView>

    <LinearLayout
        android:id="@+id/library_common_dialog_button_linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/library_common_dialog_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:background="@drawable/library_white_click_back"
            android:padding="12dp"
            android:clickable="true"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/library_blue_main"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/library_common_dialog_sure"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/library_white_click_back"
            android:padding="12dp"
            android:clickable="true"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/library_blue_main"
            android:textSize="15dp" />
    </LinearLayout>

</LinearLayout>